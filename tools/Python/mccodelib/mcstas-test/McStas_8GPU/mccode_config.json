{
  "configuration": {
    "MCCODE_VERSION": "3.x-dev",
    "TERMINAL": "x-terminal-emulator -e",
    "MCCODE": "mcstas",
    "MCRUN": "mcrun --openacc",
    "MCPLOT": "mcplot-pyqtgraph",
    "MCDISPLAY": "mcdisplay-webgl",
