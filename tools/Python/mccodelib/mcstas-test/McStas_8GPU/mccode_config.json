    "OACC": "nvc",
    "MPICC": "/opt/nvidia/hpc_sdk/Linux_x86_64/23.7/comm_libs/mpi/bin/mpicc'",
    "MPIRUN": "/opt/nvidia/hpc_sdk/Linux_x86_64/23.7/comm_libs/mpi/bin/mpirun",
