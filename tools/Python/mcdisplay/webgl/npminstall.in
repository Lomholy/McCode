#!/usr/bin/env bash

set -e
cd ${HOME} && mkdir -p .@FLAVOR@ && cd .@FLAVOR@ && mkdir -p @MCCODE_VERSION@ && cd @MCCODE_VERSION@ && mkdir -p webgl && cd webgl

FILE=${0}
TOOLDIR=`dirname $FILE`
cp ${TOOLDIR}/*.tsx .
cp ${TOOLDIR}/index.html .
cp ${TOOLDIR}/*.js .
cp ${TOOLDIR}/package.json .
npm install
npm run build
